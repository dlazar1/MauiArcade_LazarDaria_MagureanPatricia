<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:sys="clr-namespace:System;assembly=netstandard"

             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiArcade_LazarDaria_MagureanPatricia.CreateReservationPage"
             Title="Create Reservation">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Create Reservation"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Activity -->
            <Label Text="Activity" />
            <Picker x:Name="ActivityPicker">
                <Picker.Items>
                    <x:String>Bowling</x:String>
                    <x:String>Billiard</x:String>
                    <x:String>Table Tennis</x:String>
                    <x:String>Air Hockey</x:String>
                    <x:String>Dance Machine</x:String>
                </Picker.Items>
            </Picker>

            <!-- Date -->
            <Label Text="Date" />
            <DatePicker x:Name="DatePicker"
                        MinimumDate="{x:Static sys:DateTime.Today}" />

            <!-- Start Time -->
            <Label Text="Start Time" />
            <TimePicker x:Name="StartTimePicker" />

            <!-- Duration -->
            <Label Text="Duration (minutes)" />
            <Entry x:Name="DurationEntry"
                   Keyboard="Numeric"
                   Placeholder="30 - 120" />

            <!-- Button -->
            <Button Text="Save Reservation"
                    Clicked="OnSaveClicked" />

            <Label x:Name="ErrorLabel"
                   TextColor="Red"
                   IsVisible="False" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
