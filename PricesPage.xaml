<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiArcade_LazarDaria_MagureanPatricia.PricesPage"
             Title="Prices">

    <VerticalStackLayout Padding="20" Spacing="12">

        <Label Text="Prices per Activity"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <CollectionView x:Name="PricesCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12"
                           Margin="6"
                           CornerRadius="12"
                           BorderColor="LightGray">

                        <Grid ColumnDefinitions="*,Auto">
                            <!-- Activity name -->
                            <Label Text="{Binding ActivityName}"
                                   FontSize="18"
                                   FontAttributes="Bold" />

                            <!-- Price -->
                            <Label Grid.Column="1"
                                   Text="{Binding PricePerHour, StringFormat='{0} lei / hour'}"
                                   FontSize="16"
                                   TextColor="DarkGreen" />
                        </Grid>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>
