<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiArcade_LazarDaria_MagureanPatricia.PricesPage"
             Title="Prices">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Prices per Activity"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <CollectionView x:Name="PricesCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray"
                           CornerRadius="10"
                           Padding="10"
                           Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding ActivityName}"
                                   FontSize="18"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding PriceText}"
                                   FontSize="16" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
