<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiArcade_LazarDaria_MagureanPatricia.ReservationDetailsPage"
             Title="Reservation Details">

    <VerticalStackLayout Padding="20" Spacing="12">
        <Label Text="{Binding ActivityName}"
               FontSize="22"
               FontAttributes="Bold" />

        <Label Text="{Binding Date, StringFormat='Date: {0:dd/MM/yyyy}'}" />
        <Label Text="{Binding StartTime, StringFormat='Start: {0}'}" />
        <Label Text="{Binding DurationMinutes, StringFormat='Duration: {0} minutes'}" />

        <BoxView HeightRequest="1" BackgroundColor="LightGray" />

        <Label x:Name="PriceBreakdownLabel"
               FontSize="16" />

        <Label x:Name="TotalLabel"
               FontSize="18"
               FontAttributes="Bold" />
    </VerticalStackLayout>
</ContentPage>
